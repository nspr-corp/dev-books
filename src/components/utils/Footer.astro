---
import { optionNav } from '@/constants';
import IconLogo from './IconLogo.astro';
---

<footer class="bg-blue-600 dark:bg-gray-900">
    <div
        class="relative mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8 lg:pt-24"
    >
        <div class="absolute end-4 top-4 sm:end-6 sm:top-6 lg:end-8 lg:top-8 bg-white rounded-full flex justify-center items-center">
            <a class="inline-block" href="#top">
                <span class="sr-only">Back to top</span>

                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="size-10 text-blue-600 dark:text-gray-900"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                >
                    <path
                        fill-rule="evenodd"
                        d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z"
                        clip-rule="evenodd"></path>
                </svg>
            </a>
        </div>

        <div class="lg:flex lg:items-end lg:justify-between">
            <div>
                <div class="md:flex md:items-center md:gap-12">
                    <a class="block" href="/">
                        <span class="sr-only">Home</span>
                        <IconLogo />
                    </a>
                </div>

                <p
                    class="mx-auto mt-6 max-w-md text-center leading-relaxed text-white lg:text-left dark:text-gray-400"
                >
                    Master Kubernetes and cloud-native to build and scale
                    applications with agility
                </p>
            </div>

            <ul
                class="mt-12 flex flex-wrap justify-center gap-6 md:gap-8 lg:mt-0 lg:justify-end lg:gap-12"
            >
                {
                    optionNav.map(item => (
                        <li>
                            <a
                                class="text-white transition hover:text-gray-700/75 dark:text-white dark:hover:text-white/75"
                                href={item.href}
                            >
                                {item.title}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <p
            class="mt-12 text-center text-sm text-white lg:text-right dark:text-gray-400"
        >
            Copyright &copy; 2022. All rights reserved.
        </p>
    </div>
</footer>
